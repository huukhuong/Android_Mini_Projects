<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".controller.OTPActivity">

    <!-- App bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_34sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/txvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_22sdp"
            android:gravity="center"
            android:text="@string/cancel_underline"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </RelativeLayout>
    <!-- End App bar-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/reset_password"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingBottom="@dimen/_22sdp"
            android:text="@string/reset_pass_description"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/enter_code"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:background="@drawable/form_otp_text"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxLength="1"
                android:maxLines="1"
                android:paddingVertical="@dimen/_6sdp"
                android:textSize="@dimen/_16sdp" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:background="@drawable/form_otp_text"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxLength="1"
                android:maxLines="1"
                android:paddingVertical="@dimen/_6sdp"
                android:textSize="@dimen/_16sdp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:background="@drawable/form_otp_text"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxLength="1"
                android:maxLines="1"
                android:paddingVertical="@dimen/_6sdp"
                android:textSize="@dimen/_16sdp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:background="@drawable/form_otp_text"
                android:gravity="center"
                android:imeOptions="actionGo"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxLength="1"
                android:maxLines="1"
                android:paddingVertical="@dimen/_6sdp"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp" />

        <LinearLayout
            android:id="@+id/containerResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/didn_t_receive_an_otp" />

            <TextView
                android:id="@+id/txvResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp"
                android:textColor="@color/primary"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_36sdp"
            android:background="@drawable/btn_primary"
            android:text="@string/reset_password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>