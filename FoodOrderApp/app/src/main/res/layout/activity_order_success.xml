<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".controller.OrderSuccessActivity">

    <android.widget.ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:src="@drawable/ic_successfully"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/_18sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_24sdp"
            android:paddingHorizontal="@dimen/form_textview_padding"
            android:text="@string/your_order_has_been_successfully_placed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/form_textview_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sit_and_relax_while_your_orders_is_being_worked_on_it_ll_take_5min_before_you_get_it"/>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btnGoBackToHome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/btn_primary"
        android:text="@string/go_back_to_home"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>