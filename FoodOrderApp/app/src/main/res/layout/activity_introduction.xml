<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    tools:context=".controller.IntroductionActivity">

    <!-- App bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_34sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/txvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_22sdp"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </RelativeLayout>
    <!-- End App bar-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:gravity="center"
        android:paddingBottom="@dimen/_32sdp"
        android:text="@string/sologan"
        android:textColor="@color/black"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_245sdp"
        android:layout_marginHorizontal="@dimen/_24sdp"
        app:fillColor="@color/accent"
        app:indicatorVisibility="gone"
        app:pageColor="@color/dark_gray"
        app:pageTransformInterval="1000"
        app:radius="6dp"
        app:slideInterval="3000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_14sdp"
        android:paddingHorizontal="@dimen/_22sdp">

        <android.widget.Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/btn_primary"
            android:text="@string/create_account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginVertical="@dimen/_16sdp"
            android:background="@drawable/btn_transparent"
            android:backgroundTint="@color/white"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
