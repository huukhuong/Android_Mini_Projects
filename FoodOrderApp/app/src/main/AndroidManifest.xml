<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodorderapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrderApp">
        <activity
            android:name=".controller.PaymentActivity"
            android:exported="true" />
        <activity
            android:name=".controller.OrderSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".controller.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".controller.OTPActivity"
            android:exported="true" />
        <activity
            android:name=".controller.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".controller.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".controller.IntroductionActivity"
            android:exported="true" />
        <activity
            android:name=".controller.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>